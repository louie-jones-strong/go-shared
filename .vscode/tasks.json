{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Vendor",
			"type": "shell",
			"command": "go mod vendor && go mod tidy",
			"problemMatcher": [],
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "Generate",
			"type": "shell",
			"command": "go generate ./...",
			"problemMatcher": [],
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "Test Short",
			"type": "shell",
			"command": "go run gotest.tools/gotestsum@latest --format-icons hivis -- ./... -cover -short",
			"problemMatcher": [],
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "Test All",
			"type": "shell",
			"command": "go run gotest.tools/gotestsum@latest --format-icons hivis -- ./... -cover",
			"problemMatcher": [],
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "Lint",
			"type": "shell",
			"command": "go run github.com/mgechev/revive@latest -config revive.toml -formatter friendly ./src/...",
			"problemMatcher": [],
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "Spell Check",
			"type": "shell",
			"command": "cspell \"src\" --no-progress",
			"problemMatcher": [],
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "Check All",
			"type": "shell",
			"dependsOrder": "parallel",
			"dependsOn": [
				"Test All",
				"Lint",
				"Spell Check"
			],
			"problemMatcher": [],
		},
		{
			"label": "Generate & Check All",
			"type": "shell",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Generate",
				"Check All"
			],
			"problemMatcher": []
		}
	]
}